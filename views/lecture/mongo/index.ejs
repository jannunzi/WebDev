                    </thead>
                    <%if(students) {%>
                    <tbody>
                        <%for(var s=0; s<students.length; s++){%>
                        <tr>
                            <td style="text-align:center"><%=students[s].order%></td>
                            <td style="white-space: nowrap">
                                <%=students[s].firstName%>
                            </td>
                            <td style="white-space: nowrap">
                                <%=students[s].lastName%>
                            </td>
                            <td style="white-space: nowrap;overflow: hidden;text-align: center">
                                <a href="mailto:<%=students[s].email%>" title="Send Email">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </a>
                            </td>
                            <td style="white-space: nowrap;text-align: center;">
                                <a href="tel:<%=students[s].phone%>" title="Call">
                                    <span class="glyphicon glyphicon-phone-alt"></span>
                                </a>
                                <a href="sms:<%=students[s].phone%>" title="Send Text">
                                    <span class="glyphicon glyphicon-comment"></span>
                                </a>
                            </td>
                            <td style="white-space: nowrap;overflow: hidden;">
                                <%if(students[s].openShiftUrl){%>
                                <a href="<%=students[s].openShiftUrl%>" target="_blank" title="Open in new window">
                                    <%=students[s].openShiftUrl%>
                                    <span class="glyphicon glyphicon-new-window"></span>
                                </a>
                                <%}%>
                            </td>
                            <td style="white-space: nowrap;overflow: hidden;">
                                <%if(students[s].gitHubUrl){%>
                                <a href="<%=students[s].gitHubUrl%>" target="_blank" title="Open in new window">
                                    <%=students[s].gitHubUrl%>
                                    <span class="glyphicon glyphicon-new-window"></span>
                                </a>
                                <%}%>
                            </td>
                            <td style="white-space: nowrap">
