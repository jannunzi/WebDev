            <div>
                <table width="1000px" class="table table-condensed" style="table-layout: fixed;word-wrap: break-word;">
                    <thead>
                        <tr>
                            <th style="vertical-align: middle" width="60px">Order</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th width="55px">Email</th>
                            <th width="60px">Phone</th>
                            <th>OpenShift URL</th>
                            <th>GitHub URL</th>
                            <th style="white-space: nowrap">
